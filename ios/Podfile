# 1) Plataforma y desactivar stats
platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# 2) Para silenciar el warning de specs repo vacío
install! 'cocoapods', warn_for_unused_master_specs_repo: false

# 3) Proyecto Runner
project 'Runner', 'Debug' => :debug, 'Profile' => :release, 'Release' => :release

# 4) Detecta SDK de Flutter en CI o local
def flutter_root
  ENV['CM_FLUTTER_ROOT'] ||
    ENV['FLUTTER_ROOT'] ||
    raise("Neither CM_FLUTTER_ROOT nor FLUTTER_ROOT is set – ensure Flutter SDK path is defined")
end

# 5) Carga el podhelper correcto desde el SDK
require File.expand_path(
  File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper'),
  __FILE__
)

# 6) Hook inicial de Flutter
flutter_ios_podfile_setup

# 7) Target Runner
target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__)))
end

# 8) post_install con el método definido
post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
  flutter_post_install(installer)
end
