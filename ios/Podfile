platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Directorio donde vive este Podfile
flutter_application_path = __dir__

# Obtiene FLUTTER_ROOT del entorno (Codemagic lo provee)
def flutter_root
  ENV.fetch('FLUTTER_ROOT')
end

# Incluye el helper oficial de Flutter para CocoaPods
require File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper')

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Instala todos los pods de iOS de Flutter
  flutter_install_all_ios_pods(flutter_application_path)
end

post_install do |installer|
  # Ajustes post-instalaci√≥n de Flutter
  flutter_post_install(installer)
end
