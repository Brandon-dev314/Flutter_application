platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Resuelve la ruta del SDK de Flutter para CocoaPods
def flutter_root
  generated_xcode_build_settings_path = File.expand_path(
    File.join('..', 'Flutter', 'Flutter-Generated.xcconfig'),
    __dir__
  )
  unless File.exist?(generated_xcode_build_settings_path)
    fail "No se encontr√≥ Flutter-Generated.xcconfig: #{generated_xcode_build_settings_path}. Ejecuta 'flutter pub get'."
  end
  File.dirname(File.dirname(generated_xcode_build_settings_path))
end

# Incluye el helper de CocoaPods de Flutter
require File.expand_path(
  File.join('packages', 'flutter_tools', 'bin', 'podhelper'),
  flutter_root
)

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods(flutter_root)
end

post_install do |installer|
  flutter_post_install(installer)
end
