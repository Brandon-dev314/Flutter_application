# Plataforma mínima para evitar warnings de CocoaPods
platform :ios, '13.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'
project 'Runner', 'Debug' => :debug, 'Profile' => :release, 'Release' => :release

# Función para obtener FLUTTER_ROOT del Generated.xcconfig
def flutter_root
  # Primero intenta CM_FLUTTER_ROOT (que Codemagic define automáticamente),
  # luego FLUTTER_ROOT (para tu máquina local), y si no lanza error.
  ENV['CM_FLUTTER_ROOT'] ||
    ENV['FLUTTER_ROOT'] ||
    raise("Neither CM_FLUTTER_ROOT nor FLUTTER_ROOT is set – asegúrate de tener Flutter instalado")
end
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root())
flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!
  flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__)))
end

# Si tienes otros targets de app (ej. tests, App Clips, etc.), añádelos aquí e instala también los pods Flutter si corresponde:
# target 'RunnerTests' do
#   inherit! :search_paths
# end

post_install do |installer|
  flutter_post_install(installer) if defined?(flutter_post_install)
end
