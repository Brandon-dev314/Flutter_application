platform :ios, '18.5'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Localiza la ruta de Flutter SDK
def flutter_root
  root = ENV['FLUTTER_ROOT']
  if root.nil? || root.empty?
    raise 'FLUTTER_ROOT environment variable must be set.'
  end
  root
end

# Carga los helpers de CocoaPods de Flutter
require File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper')

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Instala todos los pods de los plugins de Flutter
  install_all_flutter_pods
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
